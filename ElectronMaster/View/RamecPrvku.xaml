<UserControl x:Class="ElectronMaster.View.RamecPrvku"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80" Name="UI"
             DataContext="{Binding RelativeSource={RelativeSource Self}}" IsEnabledChanged="UI_IsEnabledChanged">
    <Grid HorizontalAlignment="Stretch" ToolTip="{Binding Text, ElementName=ceskyNazevTB}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas x:Name="ZnackaPozadi" Grid.RowSpan="3" Grid.ColumnSpan="2" Background="#FFC51717"/>

        <TextBlock x:Name="ceskyNazevTB" Grid.Row="2" Text="{Binding NazevCesky, ElementName=UI}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        <TextBlock x:Name="znackaTB" Grid.Row="1" Text="{Binding Znacka, ElementName=UI}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock x:Name="elektronyTB" Text="{Binding PocetElektronu, ElementName=UI}" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</UserControl>
